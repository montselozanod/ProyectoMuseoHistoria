<link rel="stylesheet" href="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">

<div class="off-canvas-wrapper">
  <div class="callout primary">
    <% if user_signed_in? %>
        <div style="background-color: #52318e; color: white; margin-top: -15px;">
          &nbsp;
          <div class="header action signin" style="background-color: #52318e; line-height: 24px;">
            <%= link_to "Salir", destroy_admin_session_path, style:"height: 36px; padding-bottom: 1px;", :method => :delete %>
          </div>
        </div>
    <% end %>

    <div class="row column">
      <a href="/" class="gohome"><div class="header title"><%= @sala.name %></div></a>
    </div>
  </div>

  <div class="callout secondary" style="background-color: #e6ccff;">
    <div class="row column" >
      <div ><%= link_to "3 Museos", '/quiz', :class => "navegation" %> >
        <%= link_to Museo.find(Exposicion.find(@sala.exposicion_id).id).name, indexquiz_path(Museo.find(Exposicion.find(@sala.exposicion_id).id).id), :class => "navegation" %> >
        <%= link_to Exposicion.find(@sala.exposicion_id).name, indexquiz_path(Exposicion.find(@sala.exposicion_id).id), :class => "navegation" %> > 
        <b><%= @sala.name %></b>
      </div>
    </div>
  </div>

<br>

<div class="row">
  <div class="small-6 large-centered columns">
    <h1> Puntaje: <%= current_user.currentPoints %></h1>
    <%= link_to "Terminar", '/quiz', :class => "button expand regresar", :style=>"color:white" %>
  </div>
</div>
