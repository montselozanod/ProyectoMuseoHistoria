              <tr>
                  <th> ID </th>
                  <th>Usuario</th>
              </tr>
          </thead>
          <tbody>
              <% @users.each do |user| %>
              <tr>
                  <td><%= user.id %></td>
                  <td><%= link_to user.email, admin_user_results_path(:user_id => user.id), :remote => true %></td>
              </tr>
              <% end %>
          </tbody>
      </table>
    </div>
    <div class="large-8 columns" id="results">
      <%= render partial: 'user_results', locals: {trypoints: @trypoints }  %>
