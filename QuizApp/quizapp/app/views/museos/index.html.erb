<link rel="stylesheet" href="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">

<div class="off-canvas-wrapper">
  <div class="callout primary">
    <div class="row column">
      <a href="/" class="gohome"><div class="header title">3 Museos</div></a>
      <div class="header action"><%= link_to "Sign out", destroy_admin_session_path, :method => :delete %></div>
    </div>
  </div>
  <br>
  <div class="row small-up-1 medium-up-3 large-up-3">
    <h1>Museos</h1>
    <% @museos.each do |museo| %>
      <div class="column">

        <%= link_to image_tag(museo.imgURL, class: "thumbnail"), museo_show_path(museo) %>
        <h5><%= museo.name %></h5>
        <h5><%= museo.description %></h5>
        <div class="museo_links">
          <%= link_to "Editar", museo_edit_path(museo) %>, <%= link_to "Borrar", museo_destroy_path(museo), :method => :delete %>
        </div>
      </div>
    <% end %>
    <a class="large button expand nuevo" href="museos/new">Nuevo Museo</a>
    <div class="museo_links">
      <%= link_to 'Back', '/dashboard' %>
    </div>
  </div>

</div>
