<link rel="stylesheet" href="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">


<div class="off-canvas-wrapper">
  <div class="callout primary">
    <% if user_signed_in? %>
        <div style="background-color: #52318e; color: white; margin-top: -15px;">
          &nbsp;
          <div class="header action signin" style="background-color: #52318e; line-height: 24px;">
            <%= link_to "Salir", destroy_admin_session_path, style:"height: 36px; padding-bottom: 1px;", :method => :delete %>
          </div>
        </div>
    <% end %>

    <div class="row column">
      <a href="/" class="gohome"><div class="header title">3 Museos</div></a>
    </div>
  </div>

  <div class="callout secondary" style="background-color: #e6ccff;">
  <div class="row column" >
    <div ><%= link_to "3 Museos", '/quiz', :class => "navegation" %> >
      <b><%= @museo.name %></b>
    </div>
  </div>
</div>
</div>

  <br>
  <div class="row small-up-1 medium-up-3 large-up-3">
    <% if @museo.exposicions.any? %>
      <% @exposicions.order("created_at asc").each do |exposicion| %>
        <% if exposicion.active %>
          <div class="column" style="float: left;">
            <%= link_to image_tag(exposicion.imgURL, class: "thumbnail imagenQuiz imagenMenus"), salasquiz_path(exposicion) %>
            <h5 style="font-weight: bold;"><%= exposicion.name %></h5>
            <h6 style="font-weight: bold;"><%= exposicion.etype %></h6>
            <h5 style="text-align: justify;"><%= exposicion.description %></h5>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>

<br><br><br>
<div class="row">
  <div class="small-6 large-centered columns">
    <%= link_to "Regresar", '/quiz', :class => "button expand regresar", :style=>"color:white" %>
  </div>
</div>
